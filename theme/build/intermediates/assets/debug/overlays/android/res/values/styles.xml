<resources>
	<!--Preparing all style themes for system-wide changes-->
		<!--Material Dark Style-->
			<style name="Theme.Material" parent="@*android:style/Theme.Material" >
				<item name="android:colorForeground">@color/black</item>
				<item name="android:colorBackground">@color/black</item>	
				<item name="android:colorPrimary">@color/material_black</item>
				<item name="android:colorPrimaryDark">@color/material_black</item>
				<item name="android:statusBarColor">@color/material_black</item>
			</style>		
		<!--Material Light Style-->	
			<style name="Theme.Material.Light" parent="@style/Theme.Material">
				<item name="android:actionBarTheme">@style/Theme.Material</item>
				<item name="android:windowBackground">@color/material_black</item>
			</style>
		<!--Material Light Style - Dark Action Bar Style-->
			<style name="Theme.Material.Light.DarkActionBar" parent="@style/Theme.Material">
				<item name="android:actionBarTheme">@style/Theme.Material</item>
				<item name="android:windowBackground">@color/material_black</item>
			</style>

	<!--Preparing Material Style sub-settings for system-wide changes-->
		<style name="Theme.Material.Settings" parent="@*android:style/Theme.Material">
			<item name="android:colorBackground">@color/material_black</item>
			<item name="android:colorForeground">@color/material_black</item>
			<item name="android:textColorPrimary">@color/shiro</item>
			<item name="android:textColorPrimaryDisableOnly">@color/shiro</item>
			<item name="android:textColorSecondary">@color/shiro</item>
			<item name="android:textColorPrimaryInverse">@color/shiro</item>
			<item name="android:textColorSecondaryInverse">@color/shiro</item>
			<item name="android:colorControlNormal">@color/material_black</item>
			<item name="android:colorControlActivated">@color/shiro</item>
			<item name="android:colorControlHighlight">@color/material_black</item>
			<item name="android:colorPrimary">@color/material_black</item>
			<item name="android:colorPrimaryDark">@color/material_black</item>
			<item name="android:colorAccent">@color/theme_accent</item>
		</style>

	<!--Changing text color to white on majority of ROMs-->
		<!--App titles-->
			<style name="TextAppearance.Material.Title" parent="@*android:style/TextAppearance.Material.Title">
				<item name="android:textColor">@color/shiro</item>
			</style>
	
		<!--Setting titles, sub-headers, description-->
			<style name="TextAppearance.Material.Subhead" parent="@*android:style/TextAppearance.Material.Subhead">
				<item name="android:textColor">@color/shiro</item>
			</style>
			
		<!--SystemUI Notification colors values (Lockscreen + Notification Drawer)-->
			<style name="TextAppearance.Material.Notification.Info" parent="@*android:style/TextAppearance.Material.Notification.Info">
				<item name="android:textColor">@color/shiro</item>
			</style>
