<resources>
	<!-- Style of main settings, do not replace with Settings.Theme as this prevents Settings FC-->
		<style name="Theme.SettingsBase" parent="@android:style/Theme.Material" >
			<item name="android:colorBackground">@color/theme_primary</item>
			<item name="android:statusBarColor">@color/theme_primary</item>
			<item name="android:textColorSecondary">@android:color/white</item>
			<item name="android:windowBackground">@color/theme_primary</item>
		</style>
	
	<!-- About phone and Status windows, do not remove SubSettingsDialogWhenLarge as parent has been changed-->
		<style name="Theme.SubSettingsDialogWhenLarge" parent="@style/Theme.SettingsBase" />
		<style name="Theme.DialogWhenLarge" parent="@style/Theme.SettingsBase">
			<item name="android:statusBarColor">@color/theme_primary</item>
		</style>
	
	<!-- Wifi dialog and popup texts-->
		<style name="wifi_item_label">
			<item name="android:textColor">@color/theme_accent</item>
		</style>
		<style name="wifi_item_content">
			<item name="android:textColor">@color/theme_accent</item>
		</style>
		<style name="wifi_item_edit_content">
			<item name="android:textColor">@color/theme_accent</item>
		</style>
	
	<!-- Bluetooth dialog and popup texts-->
		<style name="bt_item">
			<item name="android:textColor">@color/theme_accent</item>
		</style>
		<style name="bt_item_label">
			<item name="android:textColor">@color/theme_accent</item>
		</style>
		<style name="bt_item_edit_content">
			<item name="android:textColor">@color/theme_accent</item>
		</style>
</resources>
