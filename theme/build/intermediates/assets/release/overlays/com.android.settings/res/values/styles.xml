<?xml version="1.0" encoding="utf-8"?>
<!-- STYLES OVERRIDE FOR SETTINGS -->

<resources>
	<!-- Style of main settings, do not remove SettingsBase as parent has been changed -->
	<style name="Theme.SettingsBase" parent="@android:style/Theme.Material" />
	<style name="Theme.Settings" parent="@style/Theme.SettingsBase">
		<item name="android:background">@color/theme_primary</item>
		<item name="android:statusBarColor">@color/theme_primary</item>
        <item name="android:colorAccent">@color/theme_accent</item>
	</style>
	
	<!-- About phone and Status windows, do not remove SubSettingsDialogWhenLarge as parent has been changed -->
	<style name="Theme.SubSettingsDialogWhenLarge" parent="@style/Theme.DialogWhenLarge" />
	<style name="Theme.DialogWhenLarge" parent="@android:style/Theme.Material.DialogWhenLarge">
		<item name="android:background">@color/dashboard_background_color</item>
		<item name="android:statusBarColor">@color/theme_primary</item>
        <item name="android:colorAccent">@color/theme_accent</item>
    </style>
	
	<!-- Wifi dialog and popup text -->
	<style name="wifi_item_label">
		<item name="android:textColor">@color/theme_accent</item>
    </style>
    <style name="wifi_item_content">
		<item name="android:textColor">@color/theme_accent</item>
    </style>
    <style name="wifi_item_edit_content">
		<item name="android:textColor">@color/theme_accent</item>
    </style>

    <style name="Theme.AlertDialog" parent="@android:style/Theme.Material.Dialog.Alert">

    <!-- Used by the ActionBar -->
    <item name="android:colorPrimary">@color/theme_primary_lighter_dark</item>
    <!-- Used by the StatusBar -->
    <item name="android:colorPrimaryDark">@color/theme_primary</item>
    <!-- Used by controls, e.g. CheckBox, ProgressBar, etc. -->
    <item name="android:colorAccent">@color/theme_accent</item>
    </style>

</resources>
